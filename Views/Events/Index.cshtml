<h1>Coding Events List</h1>

<p>
    <a asp-controller="Events" asp-action="Index">Event List</a>
    <br>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
    <br>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No event yet!</p>
}

<table class="table table-striped">
    <tr>
        <th>Event Name</th>
        <th>Event Description</th>
    </tr>

    @foreach (var meeting in ViewBag.events)
    {
<tr>
    <td>@meeting.Name</td>
    <td>@meeting.Description</td>
    <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@meeting.Id">Edit Event</a></td>
</tr>
    }
</table>
