@{
}

<h1>Delete Event</h1>
<form method="post">
    @foreach (var meeting in ViewBag.events)
    {
        <div class=" form-group">
            <label>
                <span>@meeting.Name</span>
                <input type ="checkbox" name="eventIds" value="@meeting.Id" class="form-control"/>
            </label>

        </div>
    }
    <input type="submit" value="Delete Selected Events" class="btn btn-danger"/>
</form>
